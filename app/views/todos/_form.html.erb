<% if @todo.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@todo.errors.count, "error") %>
    prohibited this todo from being saved:</h2>
    <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@todo) do |f| %>
  <p>
    <%= f.label :todo %> <br/>
    <%= f.text_field :todo %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
